%html
  %head
    %title Makers Instagram
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'bootstrap-theme', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'bootstrap', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          %button.navbar-toggle(data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href="#")
            %img.logo(src="http://thinkpynk.com/wp-content/uploads/2015/04/instagram-logo.png" alt="")
            %h3.logo-text Makers Instagram
          .navbar-collapse.collapse.navbar-responsive-collapse(id="bs-example-navbar-collapse-1")
            %ul.nav.navbar-nav.navbar-right
              - if user_signed_in?
                %li= link_to "Sign out", destroy_user_session_path, method: :delete
              - else
                %li= link_to "Log in", new_user_session_path
                %li= link_to "Sign up", new_user_registration_path
                %li= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path
    .container
      .row
        %col-lg-12
          %p= notice
          %p= alert
          = yield
